{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "../../poll-app/server/src"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "../../poll-app/server/node_modules",
    "**/*.spec.ts"
  ]
}
